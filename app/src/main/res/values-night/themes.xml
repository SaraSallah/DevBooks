<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryScope" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorOnPrimary">@color/primary_100</item>
        <item name="colorPrimaryContainer">@color/primary_200</item>

        <item name="android:statusBarColor">@color/primary_200</item>

    </style>
    <style name="headerStyle" parent="">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:fontFamily">@font/josefinsans_medium</item>
    </style>


    <style name="Theme.DevBooks.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_100</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">1000</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.StoryScope</item>
    </style>

</resources>